{
  "manifest_version": 3,
  "name": "LilicoExt",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "host_permissions": ["https://outblock.github.io/harness/*"],
  "content_scripts": [
    {
      "matches": ["https://outblock.github.io/harness/*"],
      "js": ["src/scripts/content/content.ts"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "src/scripts/background/background.ts"
  },
  "permissions": ["nativeMessaging", "tabs"],
  "web_accessible_resources": [
    {
      "matches": ["https://outblock.github.io/*"],
      "resources": ["content_script.js"],
      "use_dynamic_url": true
    }
  ]
}
